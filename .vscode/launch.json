    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug File",
            "program": "${file}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Yarn Debug",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}/",
            "runtimeArgs": [
                "start:debug"
            ],
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Seed Debug",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "seed:debug"
            ],
            "port": 5858
        }
    ]
}